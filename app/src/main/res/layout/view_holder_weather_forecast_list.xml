<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/weather_forecast_item_height"
    android:layout_marginStart="@dimen/margin_medium"
    android:layout_marginEnd="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_medium">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/weather_forecast_list_container">

        <TextView
            android:id="@+id/weather_forecast_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/TextSubtitle"
            android:gravity="start|center"
            android:text="tomorrow"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/weather_forecast_condition_icon"
            android:layout_margin="@dimen/margin_small"
            android:layout_width="@dimen/weather_forecast_icon_width"
            android:layout_height="@dimen/weather_forecast_icon_height"
            android:layout_weight="1"
            android:scaleType="center"

            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/weather_forecast_temp_range"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/TextSubtitle"
            android:gravity="start|center"
            android:text="25 / 13"
            android:layout_weight="1"

            />

    </LinearLayout>
</androidx.cardview.widget.CardView>