<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Fullscreen activity theme. -->
    <style name="Fullscreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TextSubtitle" parent="AppTheme">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:fontFamily">@font/d_din_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/d_din_bold</item>
    </style>

    <style name="TextXLarge" parent="AppTheme">
        <item name="android:textSize">@dimen/text_xlarge_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Custom AlertDialogs -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogTheme.ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogTheme.ButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogTheme.ButtonStyle</item>
    </style>

    <style name="AlertDialogTheme.StrongNegative" parent="AlertDialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogTheme.StrongNegative.ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogTheme.Neutral.ButtonStyle</item>
    </style>

    <style name="AlertDialogTheme.StrongPositive" parent="AlertDialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogTheme.StrongPositive.ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogTheme.Neutral.ButtonStyle</item>
    </style>

    <!-- Custom AlertDialogs Button -->
    <style name="AlertDialogTheme.ButtonStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/d_din_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AlertDialogTheme.StrongPositive.ButtonStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/d_din_bold</item>
        <item name="android:textColor">@color/main_blue</item>
    </style>

    <style name="AlertDialogTheme.StrongNegative.ButtonStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/d_din_bold</item>
        <item name="android:textColor">@color/red_bg</item>
    </style>

    <style name="AlertDialogTheme.Neutral.ButtonStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/d_din</item>
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <style name="AdapterItemTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:fontFamily">@font/d_din_bold</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="AdapterItemText">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:fontFamily">@font/d_din</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>
</resources>
